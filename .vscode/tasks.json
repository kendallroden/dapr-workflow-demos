{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Checkout Service",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CheckoutService/CheckoutServiceWorkflowSample.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Publish Checkout Service",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/CheckoutService/CheckoutServiceWorkflowSample.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build Payment Service",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/PaymentService/PaymentService.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Publish Payment Service",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}PaymentService/PaymentService.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/CheckoutService/CheckoutServiceWorkflowSample.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "appId": "order-processor",
      "appPort": 5064,
      "httpPort": 3500,
      "grpcPort": 50000,
      "label": "dapr-debug",
      "type": "dapr",
      "dependsOn": "build"
    },
    {
      "appId": "order-processor",
      "label": "daprd-down",
      "type": "daprd-down"
    }
  ]
}
